<% provide(:title, 'New Event') %>
<h1>New Event</h1>

<div class="row">
  <div class="span6 offset3">
    <%= form_for(@event) do |f| %>

      <%= f.label :title %>
      <%= f.text_field :title %>

      <%= f.label :body %>
      <%= f.text_field :body %>


      <%= f.submit "Create my event", class: "btn btn-large btn-primary" %>
    <% end %>
  </div>
</div>